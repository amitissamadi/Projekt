
package battleship;

public class Ship {
	   private String name;
	    private int size;
	    private int lifes; // ska minska för varje träff på storleken

	    public Ship(String name, int size){
	   	 this.name= name;
	   	 this.size = size;
	   	 this.lifes = size; // antal liv = storlek
}
	    public void hit(){
	      	 
	    }
	    
	    public battleship.Result status(){
	   	 if(lifes == size){
	   		 return Result.DESTROYED;
	   	 }else if(lifes < size){
	   		 return Result.PARTIAL_HIT;
	   	 }else{
	   		 return Result.NO_HIT;
	   	 }
	    
	   	 
	    }
	    
	    
	}
